    //print the alarm number
    cout << itornum << " : ";
    
    //print out the time
    cout << nodePointer->time[YEAR] << "-" << nodePointer->time[MONTH] << "-" << nodePointer->time[DAY];
    cout << " " << nodePointer->time[HOUR] << ":" << nodePointer->time[MINUTE] << ":" << nodePointer->time[SECOND];
    
    //print out the message
    cout
    

}

